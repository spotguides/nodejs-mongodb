{
  "name": "@banzaicloud/spotguide-nodejs-mongodb",
  "version": "1.0.0",
  "description": "Spotguide for Node.js with MongoDB database",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node .",
    "start:dev": "NODE_ENV=development nodemon . | pino-pretty",
    "test": "npm run lint && npm run unit-test",
    "unit-test": "jest",
    "fmt": "prettier --find-config-path --write './**/*.{js,json,yaml}' && npm run lint -- --fix",
    "lint": "eslint ."
  },
  "dependencies": {
    "@banzaicloud/service-tools": "2.0.7",
    "@opencensus/core": "0.0.14",
    "@opencensus/exporter-jaeger": "0.0.14",
    "@opencensus/nodejs": "0.0.14",
    "bson": "4.0.2",
    "joi": "14.3.1",
    "koa": "2.7.0",
    "koa-bodyparser": "4.2.1",
    "koa-compose": "4.1.0",
    "koa-router": "7.4.0",
    "mongoose": "5.5.14",
    "prom-client": "11.5.0",
    "semver": "6.1.1",
    "stoppable": "1.1.0"
  },
  "devDependencies": {
    "dotenv": "8.0.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "2.4.0",
    "jest": "24.8.0",
    "nodemon": "1.19.1",
    "pino-pretty": "3.1.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.0",
    "request-promise-native": "1.0.7"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).js",
      "**/__tests__/*.+js"
    ],
    "resetMocks": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm test"
    }
  }
}
