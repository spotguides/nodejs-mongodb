{
  "name": "@banzaicloud/spotguide-nodejs-mongodb",
  "version": "1.0.0",
  "description": "Spotguide for Node.js with MongoDB database",
  "license": "Apache-2.0",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node .",
    "start:dev": "NODE_ENV=development nodemon . | pino-pretty",
    "test": "npm run lint && npm run unit-test",
    "unit-test": "jest",
    "fmt": "prettier --find-config-path --write './**/*.{js,json,yaml}' && npm run lint -- --fix",
    "lint": "eslint ."
  },
  "dependencies": {
    "@banzaicloud/service-tools": "2.0.1",
    "bson": "4.0.1",
    "joi": "14.3.1",
    "koa": "2.7.0",
    "koa-bodyparser": "4.2.1",
    "koa-compose": "4.1.0",
    "koa-router": "7.4.0",
    "mongoose": "5.4.13",
    "prom-client": "11.2.1",
    "semver": "5.6.0",
    "stoppable": "1.1.0"
  },
  "devDependencies": {
    "dotenv": "6.2.0",
    "eslint": "5.14.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "4.0.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-prettier": "3.0.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "nodemon": "1.18.10",
    "pino-pretty": "2.5.0",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "request-promise-native": "1.0.7"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).js",
      "**/__tests__/*.+js"
    ],
    "resetMocks": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm test"
    }
  }
}
